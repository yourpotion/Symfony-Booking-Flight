{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for flight in flights %}
			{% block flight %}
				<a href="/flight/{{flight.id}}">
					{% set flightView = include("layout/viewFlight.html.twig") %}
					{{flightView}}
				</a>
			{% endblock %}
		{% endfor %}
	</div>
{% endblock %}
