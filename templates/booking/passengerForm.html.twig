{% extends 'base.html.twig' %}
{% set flightView = include("layout/viewFlight.html.twig") %}

{% block title %}{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% block flight %}
			{{flightView}}
			{{form_start(formOfPassenger)}}
			{{form_widget(formOfOption)}}
			{{form_widget(formOfPassenger)}}
			<button type="submit">
				Finish Booking
			</button>
			{{form_end(formOfPassenger)}}
		{% endblock %}
	</div>


{% endblock %}
