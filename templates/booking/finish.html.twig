{% extends 'base.html.twig' %}
{% set flightView = include("layout/viewFlight.html.twig") %}

{% block title %}{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% block flight %}
			<a>
				Поздравляем, Пассажир
				{{passenger.firstName}}
				{{passenger.lastName}}
				<br>
				успешно приобрел билет на рейс
				{{flightView}}.
				<br>
				Номер Вашего бронирования:
				{{ticket.id}}
			</a>

		{% endblock %}
	</div>


{% endblock %}
