{% extends 'base.html.twig' %}

{% block title %}Hello GateManager!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{{form_start(formOfSearchingTicket)}}
	<div class="example-wrapper">
		Please, fill next steps:
		{{form_widget(formOfPassengerId)}}
		{{form_widget(formOfSearchingTicket)}}
		{{form_widget(formOfOption)}}

		<button type='submit'>
			Submit
		</button>
	</div>
	{{form_end(formOfSearchingTicket)}}
{% endblock %}
